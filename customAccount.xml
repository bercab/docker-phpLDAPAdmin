<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<!DOCTYPE template SYSTEM "../template.dtd">

<template>
<askcontainer>1</askcontainer>
<description>New Development Account</description>
<icon>ldap-user.png</icon>
<invalid>0</invalid>
<rdn>uid</rdn>
<regexp>^ou=people,dc=.*,</regexp>
<title>Development: Account</title>
<visible>1</visible>

<objectClasses>
<objectClass id="inetOrgPerson"></objectClass>
<objectClass id="uidObject"></objectClass>
<objectClass id="simpleSecurityObject"></objectClass>
</objectClasses>

<attributes>
<attribute id="uid">
	<display>User ID</display>
	<icon>ldap-uid.png</icon>
	<onchange>=autoFill(mail;%uid%@example.org)</onchange>
	<!-- <onchange>=autoFill(homeDirectory;/home/%uid%)</onchange> -->
	<order>1</order>
	<page>1</page>
	<spacer>1</spacer>
</attribute>
<attribute id="sn">
	<display>姓</display>
	<onchange>=autoFill(displayName;%sn%%cn%)</onchange>
	<order>3</order>
	<page>1</page>
</attribute>
<attribute id="cn">
	<display>名</display>
	<onchange>=autoFill(displayName;%sn%%cn%)</onchange>
	<order>4</order>
	<page>1</page>
</attribute>
<attribute id="mobile">
	<display>Mobile</display>
	<order>5</order>
	<page>1</page>
</attribute>
<attribute id="mail">
	<display>Email</display>
	<icon>mail.png</icon>
	<order>6</order>
	<page>1</page>
</attribute>
<attribute id="displayName">
	<display>Display Name</display>
	<order>7</order>
	<page>1</page>
</attribute>
<attribute id="employeeNumber">
	<display>Employee Number</display>
	<order>8</order>
	<page>1</page>
</attribute>
<attribute id="userPassword">
	<display>Password</display>
	<!-- <helper>
		<display>Encryption</display>
		<id>enc</id>
		<value>=php.PasswordEncryptionTypes()</value>
	</helper> -->
	<icon>lock.png</icon>
	<order>2</order>
	<page>1</page>
	<post>=php.PasswordEncrypt(%enc%;%userPassword%)</post>
	<spacer>1</spacer>
	<verify>1</verify>
</attribute>
</attributes>

</template>
